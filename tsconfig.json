{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/declarations.d.ts"] // Incluye tipos personalizados
  },
  "include": ["src/**/*", "src/declarations.d.ts"], // Aseg√∫rate de incluir declaraciones
  "exclude": ["node_modules", "dist"]
}
